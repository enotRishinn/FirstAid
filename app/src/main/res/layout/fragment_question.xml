<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <TextView
                android:id="@+id/number_of_question"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="7dp"
                android:layout_marginTop="5dp"
                android:textSize="20sp"
                android:textColor="@color/colorPrimaryDark"
                android:textAlignment="center"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/question_image"/>

            <TextView
                android:id="@+id/question"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="20dp"
                android:textSize="18sp"
                android:textColor="@android:color/black"/>

            <Button
                android:id="@+id/first_answer"
                android:layout_marginTop="7dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/button_selector"
                android:padding="10dp"
                android:textAllCaps="false"
                />
            <Button
                android:id="@+id/second_answer"
                android:layout_marginTop="7dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/button_selector"
                android:padding="10dp"
                android:textAllCaps="false"
                />
            <Button
                android:id="@+id/third_answer"
                android:layout_marginTop="7dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/button_selector"
                android:padding="10dp"
                android:textAllCaps="false"
                />

            <TextView
                android:id="@+id/question_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textSize="18sp"
                android:textAllCaps="true"
                android:textColor="#114113"
                android:textAlignment="center"/>
            <Button
                android:id="@+id/next_question"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="20dp"
                android:layout_width="200dp"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:background="@drawable/button_selector"
                android:padding="10dp"
                android:text="Следующий вопрос"
                android:visibility="invisible"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:layout_marginBottom="10dp">

                <Button
                    android:id="@+id/finish"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/finish_test"
                    android:layout_weight="1"
                    android:background="@drawable/button_selector"/>

                <Button
                    android:id="@+id/skip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/skip_question"
                    android:layout_weight="1"
                    android:background="@drawable/button_selector"/>

            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</RelativeLayout>