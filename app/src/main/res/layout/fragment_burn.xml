<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/burn_light"
                android:layout_margin="20dp"
                android:textSize="18sp"
                android:textColor="@android:color/black"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ojoglegkiyalg"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/burn_tight"
                android:layout_margin="20dp"
                android:textSize="18sp"
                android:textColor="@android:color/black"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ojogtyageliyalg"/>
            <Button
                android:id="@+id/light_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_selector"
                android:text="@string/light_btn"/>
            <Button
                android:id="@+id/tight_btn"
                android:layout_width="match_parent"
                android:background="@drawable/button_selector"
                android:layout_height="wrap_content"
                android:text="@string/light_btn"/>

            <Button
                android:id="@+id/burn_back"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_selector"
                android:text="Назад"/>
            <Button
                android:id="@+id/burn_exit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_selector"
                android:text="Выход"/>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>