<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <TextView
            android:id="@+id/title_result"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:gravity="center_horizontal"
            android:textColor="@color/cardview_dark_background"
            android:text="@string/test_result"
            android:textSize="22sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginTop="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_weight="2"
                android:paddingRight="10dp"
                android:layout_marginTop="4dp">

                <TextView
                    android:id="@+id/number_of_correct_answer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/button_selector_correct"
                    android:textColor="@android:color/primary_text_light"
                    android:textAllCaps="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"/>
                <TextView
                    android:id="@+id/number_of_skip_answer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_selector"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="10dp"
                    android:textColor="@android:color/primary_text_light"
                    android:textAllCaps="true"/>
                <TextView
                    android:id="@+id/number_of_wrong_answer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_selector_error"
                    android:textColor="@android:color/primary_text_light"
                    android:textAllCaps="true"
                    android:layout_marginLeft="20dp"/>

            </LinearLayout>

            <ImageView
                android:layout_width="155dp"
                android:layout_height="189dp"
                android:src="@drawable/for_test_result"
                />

        </LinearLayout>


        </LinearLayout>

    </ScrollView>

</LinearLayout>